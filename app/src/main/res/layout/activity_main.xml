<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_doa_dzikir"
        android:layout_margin="@dimen/_16dp"
        android:layout_marginStart="@dimen/_8dp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_32sp"
        android:textStyle="bold"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.viewpager2.widget.ViewPager2
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200dp"
                android:layout_margin="@dimen/_16dp"
                android:id="@+id/vpArtikel"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/_16dp"
                android:orientation="horizontal"
                android:id="@+id/llSliderDot"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_main_menu"
                android:orientation="vertical"
                android:padding="@dimen/_16dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_title"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/_16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp"
                    android:id="@+id/llDzikirDoaShalat">
                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/ic_doa"
                        android:contentDescription="@string/txt_imageview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="@string/txt_doa_sehari_hari"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp"
                    android:id="@+id/llDzikirSetiapSaat">
                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/ic_time"
                        android:contentDescription="@string/txt_imageview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="@string/txt_dzikir_setiap_saat"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp"
                    android:id="@+id/llDzikirDoaHarian">
                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/ic_dzikir"
                        android:contentDescription="@string/txt_imageview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="@string/txt_dzikir_dan_doa_harian"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_16dp"
                    android:background="@drawable/bg_item"
                    android:orientation="horizontal"
                    android:padding="@dimen/_16dp"
                    android:id="@+id/llDzikirPagiPetang">
                    <ImageView
                        android:layout_width="@dimen/_75dp"
                        android:layout_height="@dimen/_75dp"
                        android:src="@drawable/ic_pagi_petang"
                        android:contentDescription="@string/txt_imageview"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="@string/txt_dzikir_pagi_dan_petang"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:textSize="@dimen/_18sp"/>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>