<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/_16dp"
    android:background="@drawable/bg_item"
    android:paddingBottom="@dimen/_8dp"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDesc"
        android:background="@drawable/bg_blue_gray"
        android:fontFamily="sans-serif"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="@dimen/_16dp"
        android:paddingEnd="@dimen/_16dp"
        android:paddingBottom="@dimen/_16dp"
        android:textColor="@color/dot_blue"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        android:text="@string/txt_description"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvLafaz"
        android:layout_marginBottom="@dimen/_16dp"
        android:paddingStart="@dimen/_16dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_16dp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_20sp"
        android:textStyle="bold"
        android:fontFamily="@font/arabic_arihna"
        android:text="@string/txt_lafaz"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:paddingStart="@dimen/_16dp"
        android:paddingEnd="@dimen/_16dp"
        android:textColor="@color/blue"
        android:textSize="@dimen/_16sp"
        android:textStyle="italic"
        android:id="@+id/tvTerjemah"
        android:text="@string/txt_terjemah"/>



</LinearLayout>